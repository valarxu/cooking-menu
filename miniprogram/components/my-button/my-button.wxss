.my-btn {
  background: #6145FF;
  color: #fff;
  border: none;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx 0 rgba(97,69,255,0.15);
  font-size: 30rpx;
  padding: 18rpx 0;
  width: 80%;
  margin: 0 auto 36rpx auto;
  display: block;
  transition: background 0.2s, color 0.2s;
  position: relative;
}
.my-btn:active {
  background: #4b36c9;
}
.my-btn-outline {
  background: #fff;
  color: #6145FF;
  border: 2rpx solid #6145FF;
  box-shadow: 0 4rpx 16rpx 0 rgba(97,69,255,0.08);
}
.my-btn-outline:active {
  background: #f3f1ff;
  color: #4b36c9;
}
.my-btn-loading {
  opacity: 0.8;
  pointer-events: none;
}
.loading-icon {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #fff;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  position: absolute;
  left: 15%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.my-btn-outline .loading-icon {
  border-color: #6145FF;
  border-top-color: transparent;
}
@keyframes spin {
  from {
    transform: translate(-50%, -50%) rotate(0deg);
  }
  to {
    transform: translate(-50%, -50%) rotate(360deg);
  }
} 