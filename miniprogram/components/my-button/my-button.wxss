.my-btn {
  background: #6145FF;
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 16rpx 0 rgba(97, 69, 255, 0.15);
  padding: 18rpx 0;
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  margin: 0;
  padding: 0;
}

.my-btn:active {
  background: #4b36c9;
}

.my-btn-outline {
  background: #fff;
  color: #6145FF;
  border: 2rpx solid #6145FF;
  box-shadow: 0 4rpx 16rpx 0 rgba(97, 69, 255, 0.08);
}

.my-btn-outline:active {
  background: #f3f1ff;
  color: #4b36c9;
}

.my-btn-gradient {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #6145FF 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(97, 69, 255, 0.3);
  transition: all 0.3s ease;
  margin: 0;
  padding: 0;
}

.my-btn-gradient:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(97, 69, 255, 0.3);
}

.my-btn-floating {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #6145FF 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(97, 69, 255, 0.4);
  transition: all 0.3s ease;
  margin: 0;
  padding: 0;
  z-index: 1000;
}

.my-btn-floating:active {
  transform: translateX(-50%) translateY(2rpx);
  box-shadow: 0 8rpx 25rpx rgba(97, 69, 255, 0.4);
}

.my-btn-loading {
  opacity: 0.8;
  pointer-events: none;
}

.my-btn-gradient.my-btn-loading {
  background: #ccc;
  box-shadow: none;
}

.loading-icon {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #fff;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  position: absolute;
  left: 15%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.my-btn-outline .loading-icon {
  border-color: #6145FF;
  border-top-color: transparent;
}

@keyframes spin {
  from {
    transform: translate(-50%, -50%) rotate(0deg);
  }

  to {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}