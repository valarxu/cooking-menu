.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-item {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.label.required::after {
  content: '*';
  color: #ff4757;
  margin-left: 5rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.input:focus {
  border-color: #6145FF;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.textarea:focus {
  border-color: #6145FF;
}

.image-upload {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.upload-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
}

.submit-container {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx; 
}

.delete-btn {
  background: #fff !important;
  color: #ff4757 !important;
  border: 2rpx solid #ff4757 !important;
}

.delete-btn:active {
  background: #fff5f5 !important;
}