.ai-assistant-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

.chat-container {
  flex: 1;
  padding: 20rpx;
}

.message-list {
  padding-bottom: 20rpx;
}

.message {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.user-message {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 20rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.content {
  max-width: 60%;
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.user-message .content {
  background: #6145FF;
  color: #fff;
  border-radius: 20rpx 4rpx 20rpx 20rpx;
}

.ai-message .content {
  background: #fff;
  color: #333;
  border-radius: 4rpx 20rpx 20rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.input-container {
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.input {
  flex: 1;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.send-btn {
  width: 120rpx;
  height: 80rpx;
  background: #e0e0e0;
  color: #999;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.send-btn.active {
  background: #6145FF;
  color: #fff;
} 