.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 通用样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 声音克隆状态区域 */
.voice-clone-section {
  margin-bottom: 40rpx;
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

.voice-clone-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.tip-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.clone-voice-btn {
  width: 300rpx;
  margin: 0 auto;
}

/* 上传区域 */
.upload-section {
  margin-bottom: 40rpx;
}

.upload-area {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.choose-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  background-color: #fafafa;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
}

.video-preview {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
}

.video-actions {
  display: block;
  margin-top: 20rpx;
}

.action-btn {
  width: 340rpx;
}

/* 文案输入区域 */
.text-section {
  margin-bottom: 40rpx;
}

.text-input {
  width: 100%;
  min-height: 200rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.text-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 生成区域 */
.generate-section {
  margin-bottom: 40rpx;
  text-align: center;
}

.status-tip {
  margin-top: 20rpx;
}

.status-text {
  font-size: 28rpx;
  color: #6145FF;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 历史记录区域 */
.history-section {
  margin-bottom: 40rpx;
}

.video-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.video-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.video-info {
  margin-bottom: 20rpx;
}

.video-content {
  margin-bottom: 15rpx;
}

.video-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.video-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.create-time {
  font-size: 24rpx;
  color: #999;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: white;
}

.status-generating_audio,
.status-generating_video {
  background-color: #ff9500;
}

.status-completed {
  background-color: #34c759;
}

.status-failed {
  background-color: #ff3b30;
}

.video-preview-container {
  border-radius: 12rpx;
  overflow: hidden;
}

.result-video {
  width: 100%;
  height: 300rpx;
}

.loading-placeholder,
.error-placeholder {
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.error-text {
  font-size: 28rpx;
  color: #ff3b30;
}

/* 空状态 */
.empty-tip {
  text-align: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  display: block;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }
  
  .upload-area {
    padding: 30rpx;
  }
  
  .video-item {
    padding: 20rpx;
  }
}