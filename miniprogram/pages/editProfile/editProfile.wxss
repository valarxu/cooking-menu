.edit-profile-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 180rpx;
}

.profile-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.avatar-section {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
}

.avatar-btn {
  margin-right: auto;
  padding: 0;
  background: none;
  border: none;
  align-items: center;
}

.avatar-btn::after {
  border: none;
}

.nickname-input {
  height: 80rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
}

.phone-section {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.phone-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.phone-number {
  font-size: 28rpx;
  color: #666;
}

.phone-btn {
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  background: none;
  color: #07c160;
  line-height: 1.5;
}

.phone-btn::after {
  border: none;
}

.profile-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 0 30rpx;
  height: 110rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.profile-label {
  font-size: 28rpx;
  color: #333;
  flex: 0 0 120rpx;
}

.profile-value {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  border: none;
  background: transparent;
}

.clickable {
  cursor: pointer;
}

.button-row {
  display: flex;
  justify-content: space-between;
  gap: 40rpx;
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.save-btn {
  width: 90%;
  margin: 48rpx auto 0 auto;
  display: block;
  background-color: #7c3aed;
  color: #fff;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: none;
}

.logout-section {
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.logout-btn {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 88rpx;
  width: 90%;
  margin: 0 auto;
  background-color: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: block;
  z-index: 100;
}

.logout-btn:active {
  opacity: 0.8;
} 