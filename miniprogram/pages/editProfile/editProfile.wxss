.edit-profile-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.profile-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.avatar-section {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.avatar-btn {
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  background: none;
  color: #07c160;
  line-height: 1.5;
}

.avatar-btn::after {
  border: none;
}

.nickname-input {
  height: 80rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
}

.phone-section {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.phone-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.phone-number {
  font-size: 28rpx;
  color: #666;
}

.phone-btn {
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  background: none;
  color: #07c160;
  line-height: 1.5;
}

.phone-btn::after {
  border: none;
}

.button-section {
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
} 