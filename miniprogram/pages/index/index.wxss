.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx;
  background-color: #f8f8f8;
  padding-bottom: env(safe-area-inset-bottom);
  /* 适配底部安全区域 */
}

.banner {
  position: relative;
  width: 100%;
  margin-bottom: 32rpx;
  /* 调整间距 */
}

.banner-image {
  width: 100%;
  border-radius: 16rpx;
}

.banner-text {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  color: #fff;
  z-index: 2;
}

.banner-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
}

.banner-subtitle {
  font-size: 28rpx;
  display: block;
  margin-top: 8rpx;
}

.function-cards {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 32rpx;
  /* 调整间距 */
  gap: 20rpx;
}

.card {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.card-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.card-content {
  color: #fff;
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.large-card {
  width: 50%;
  height: 420rpx;
}

.right-cards {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 50%;
  gap: 20rpx;
}

.small-card {
  width: 100%;
  height: 200rpx;
}

/* 为特定卡片内容设置颜色和对齐 */
.large-card .card-content {
  align-items: flex-start;
  /* 左对齐 */
  top: 35%;
  padding: 4px 24px 6px;
  border-radius: 4px;
  background: #4415ff;
}

.small-card .card-content {
  color: #fff;
  /* 右侧小卡片文字颜色 */
  top: 30%;
  font-weight: bold;
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.large-card .card-icon {
  width: 120rpx;
  /* 数字人图标大一些 */
  height: 120rpx;
}

.card-desc {
  font-size: 28rpx;
  color: #666666;
}

.card-text {
  font-size: 36rpx;
  /* 数字人文字大一些 */
  font-weight: bold;
}

.product-management {
  width: 100%;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
}

.product-items-grid {
  display: flex;
  flex-wrap: wrap;
  /* 允许换行 */
  justify-content: space-between;
  /* 项目之间有空间 */
  gap: 20rpx;
  /* 项目之间的间隙 */
}

.product-grid-item {
  position: relative;
  width: calc(50% - 10rpx);
  /* 计算宽度以实现两列布局，减去gap的一半 */
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  padding: 30rpx;
  display: flex;
  /* 使内容和箭头左右布局 */
  justify-content: space-between;
  align-items: center;
}

.full-width-item {
  width: 100%;
  /* 全宽项目 */
}

.item-bg {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 200rpx;
  /* 根据实际图片调整大小 */
  height: 200rpx;
  /* 根据实际图片调整大小 */
  z-index: 1;
  opacity: 0.8;
}

.item-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  /* 标题颜色 */
  margin-bottom: 4rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #888;
}

.item-arrow {
  font-size: 36rpx;
  color: #bbb;
  z-index: 2;
  margin-left: 20rpx;
}

.left-cards {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 50%;
  gap: 20rpx;
}

.bottom-card {
  width: 100%;
  margin-top: 16rpx;
}

.full-width-card {
  width: 100%;
  height: 200rpx;
}

.full-width-card .card-content {
  align-items: flex-start;
  top: 35%;
  padding: 4px 24px 6px;
  border-radius: 4px;
  background: #4415ff;
}

.full-width-card .card-text {
  font-size: 36rpx;
  font-weight: bold;
}

.card-middle {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.card-title {
  color: #333;
  position: relative;
  width: 90%;
  top: 0;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 12px;
}

.card-bottom-title {
  color: #333;
  position: relative;
  width: 94%;
  top: 0;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 12px;
}