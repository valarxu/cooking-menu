.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  position: relative;
  /* padding-bottom: 140rpx; */
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.upload-btn {
  background-color: #6145FF;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

.upload-btn.floating {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  height: 72rpx;
  line-height: 54rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(97, 69, 255, 0.3);
  z-index: 100;
}

.video-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.video-item {
  width: calc((100% - 40rpx) / 3);
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.video-player {
  width: 100%;
  height: 200rpx;
}

.video-info {
  padding: 10rpx;
}

.video-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 5rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.upload-time {
  font-size: 20rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 200rpx;
  width: 100%;
} 