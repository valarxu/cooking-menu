.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.upload-btn {
  background-color: #07c160;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

.video-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.video-item {
  width: calc((100% - 40rpx) / 3);
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.video-player {
  width: 100%;
  height: 200rpx;
}

.video-info {
  padding: 10rpx;
}

.video-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 5rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.upload-time {
  font-size: 20rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 200rpx;
}

.name-input-mask {
  position: fixed; left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3); display: flex; align-items: center; justify-content: center; z-index: 1000;
}
.name-input-dialog {
  background: #fff; padding: 40rpx; border-radius: 16rpx; width: 80vw; box-sizing: border-box;
  display: flex; flex-direction: column; gap: 20rpx;
}
.name-input {
  border: 1px solid #eee; border-radius: 8rpx; padding: 16rpx; font-size: 28rpx;
}
.btn-row {
  display: flex; flex-direction: row; gap: 20rpx; justify-content: flex-end;
}
.cancel-btn {
  background: #eee; color: #333;
} 