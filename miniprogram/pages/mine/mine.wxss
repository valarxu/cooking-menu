.mine-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  min-height: 100vh;
  background: #f8f8f8;
}
.user-card {
  width: 90vw;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0 40rpx 0;
  margin-bottom: 24rpx;
}
.button-group {
  margin: 16rpx 0 16rpx 0;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.userid {
  color: #888;
  font-size: 24rpx;
  margin-bottom: 16rpx;
}
.user-stats {
  display: flex;
  justify-content: space-between;
  width: 70vw;
  margin-top: 16rpx;
  color: #333;
  font-size: 28rpx;
}

/* 登录按钮容器 */
.login-btn-container {
  margin: 20rpx 0;
  width: 80%;
}

/* 登录按钮样式 */
.login-btn {
  background-color: #07c160;
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  border: none;
}

/* 按钮点击效果 */
.login-btn:active {
  opacity: 0.8;
}

/* 退出登录按钮 */
.logout-btn {
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 66rpx;
  width: 60%;
  margin-top: 40rpx;
}

.logout-btn:active {
  opacity: 0.8;
  background: rgba(255, 77, 79, 0.1);
}

.mine-card-list {
  margin: 40rpx 0 0 0;
  padding: 0 30rpx;
  width: 90vw;
}
.mine-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
}
.card-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 32rpx;
}
.card-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 编辑资料按钮样式 - 超链接风格 */
.edit-btn {
  background: none;
  border: 0 !important;
  outline: none;
  color: #4b36c9;
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  /* text-decoration: underline; */
  font-weight: normal;
}

/* 移除微信小程序 button 组件的默认伪边框 */
.edit-btn::after {
  border: none;
}

.edit-btn:active {
  opacity: 0.6;
  background: none;
}