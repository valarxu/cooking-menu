.mine-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  min-height: 100vh;
  background: #f8f8f8;
}
.user-card {
  width: 90vw;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0 20rpx 0;
  margin-bottom: 40rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.userid {
  color: #888;
  font-size: 24rpx;
  margin-bottom: 16rpx;
}
.user-stats {
  display: flex;
  justify-content: space-between;
  width: 70vw;
  margin-top: 16rpx;
  color: #333;
  font-size: 28rpx;
}
.mine-menu {
  width: 90vw;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #666;
} 

/* 登录按钮容器 */
.login-btn-container {
  margin: 20rpx 0;
  width: 80%;
}

/* 登录按钮样式 */
.login-btn {
  background-color: #07c160;
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  border: none;
}

/* 按钮点击效果 */
.login-btn:active {
  opacity: 0.8;
}

/* 退出登录按钮 */
.logout-btn {
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 66rpx;
  width: 60%;
  margin-top: 40rpx;
}

.logout-btn:active {
  opacity: 0.8;
  background: rgba(255, 77, 79, 0.1);
}