.shop-info-container {
  padding: 32rpx;
  background: #f5f5f5;
  min-height: 100vh;
}
.shop-info-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 32rpx;
  line-height: 1.5;
}
.form-item {
  margin-bottom: 28rpx;
}
.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}
.input {
  width: 92%;
  height: 80rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e5e5e5;
  background: #fff;
  font-size: 28rpx;
  padding: 0 24rpx;
  margin-top: 8rpx;
}
.save-btn {
  width: 100%;
  height: 88rpx;
  background: #7c3aed;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 40rpx;
  font-weight: 500;
  border: none;
} 