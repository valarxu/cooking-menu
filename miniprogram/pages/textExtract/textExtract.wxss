.container {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  padding: 32rpx;
}
.video-input {
  width: 100%;
  min-height: 180rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}
.result-area {
  margin-top: 64rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}
.result-text {
  width: 100%;
  min-height: 220rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}