.text-extract-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 32rpx;
}
.video-input {
  width: 100%;
  min-height: 100rpx;
  border: 1px solid #eee;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.extract-btn, .copy-btn, .opt-btn {
  background: none;
  color: inherit;
  border: none;
  box-shadow: none;
  padding: 0;
  margin: 0;
}
.result-area {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}
.result-text {
  width: 100%;
  min-height: 100rpx;
  border: 1px solid #eee;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
} 