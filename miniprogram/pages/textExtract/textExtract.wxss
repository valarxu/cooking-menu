.container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 32rpx;
}
.video-input {
  width: 100%;
  min-height: 180rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}
.extract-btn, .copy-btn, .opt-btn {
  background: none;
  color: inherit;
  border: none;
  box-shadow: none;
  padding: 0;
  margin: 0;
}
.result-area {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}
.result-text {
  width: 100%;
  min-height: 220rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}