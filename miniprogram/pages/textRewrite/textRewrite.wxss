.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  height: 100vh;
  box-sizing: border-box;
}

.input-area, .output-area {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
}

.input-area {
  height: 200rpx;
}

.output-area {
  background: #f8f8f8;
  flex: 1;
  min-height: 400rpx;
  white-space: pre-wrap;
  word-break: break-all;
}

.rewrite-btn, .copy-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.copy-btn {
  background: #1989fa;
}