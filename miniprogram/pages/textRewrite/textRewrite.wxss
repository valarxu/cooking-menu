.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  box-sizing: border-box;
}

.input-area, .output-area {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
}

.input-area {
  height: 300rpx;
}

.output-area {
  background: #f8f8f8;
  height: 500rpx;
  white-space: pre-wrap;
  word-break: break-all;
}