.container {
  padding: 32rpx 24rpx;
  background: #f7f8fa;
  min-height: 100vh;
}
.section {
  margin-bottom: 32rpx;
}
.input-area {
  width: 100%;
  min-height: 180rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}
.output-area {
  width: 100%;
  min-height: 220rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
  border: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}