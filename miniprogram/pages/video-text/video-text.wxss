.container {
  padding: 32rpx;
  background: #f5f5f5;
  min-height: 100vh;
}
.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 32rpx;
  line-height: 1.5;
  text-align: left;
}
.subtitle {
  color: #ff3b30;
  font-size: 26rpx;
  margin-bottom: 32rpx;
  text-align: left;
}
.form {
  margin-bottom: 32rpx;
}
.form-item {
  margin-bottom: 28rpx;
}
.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}
.input {
  width: 92%;
  height: 80rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e5e5e5;
  background: #fff;
  font-size: 28rpx;
  padding: 0 24rpx;
  margin-top: 8rpx;
}
.button-group {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  margin: 32rpx 0 24rpx 0;
}
.output-title {
  font-size: 28rpx;
  margin-bottom: 12rpx;
  color: #333;
}
.output-box {
  min-height: 80rpx;
  background: #fff;
  border-radius: 12rpx;
  border: 1rpx solid #e5e5e5;
  padding: 20rpx;
  font-size: 28rpx;
  margin-bottom: 32rpx;
  color: #333;
  word-break: break-all;
}
my-button {
  width: 100%;
  margin-top: 24rpx;
} 