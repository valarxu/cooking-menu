/* 容器样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.page-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 区块样式 */
.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

/* 文案类型选择 */
.type-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.type-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
}

.type-item:last-child {
  border-bottom: none;
}

.type-item.selected {
  background-color: #f0f8ff;
  border-left: 6rpx solid #6145FF;
}

.type-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.type-check {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #6145FF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 商品选择器 */
.product-selector {
  margin-bottom: 12rpx;
}

.selector-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.selector-input:active {
  background: #f8f8f8;
}

.selector-text {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

.selector-text.placeholder {
  color: #999;
}

.selector-arrow {
  font-size: 32rpx;
  color: #999;
  transform: rotate(90deg);
  transition: transform 0.3s ease;
}

/* 商品选择弹窗 */
.product-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.product-picker {
  width: 100%;
  max-height: 80vh;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  overflow: hidden;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.picker-close {
  font-size: 48rpx;
  color: #999;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-content {
  max-height: 60vh;
  padding: 0 32rpx 32rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.picker-item:last-child {
  border-bottom: none;
}

.picker-item.selected {
  background: #f0f8ff;
  margin: 0 -32rpx;
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
}

.picker-item-info {
  flex: 1;
}

.picker-item-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.picker-item-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

.picker-item-check {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #007aff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  padding: 60rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 文本域输入 */
.textarea-input {
  width: 100%;
  min-height: 200rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #f0f0f0;
  box-sizing: border-box;
  line-height: 1.6;
}

.textarea-input:focus {
  border-color: #6145FF;
}

/* 提交按钮区域 */
.submit-section {
  margin: 40rpx 0;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #6145FF 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(97, 69, 255, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(97, 69, 255, 0.3);
}

.submit-btn.loading {
  background: #ccc;
  box-shadow: none;
}

.submit-btn[disabled] {
  background: #ccc;
  color: #999;
  box-shadow: none;
}

/* 结果区域 */
.result-section {
  margin-top: 40rpx;
}

.result-content {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-left: 6rpx solid #6145FF;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.result-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  word-break: break-all;
}

/* 复制按钮 */
.copy-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(40, 167, 69, 0.3);
  transition: all 0.3s ease;
}

.copy-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(40, 167, 69, 0.3);
}