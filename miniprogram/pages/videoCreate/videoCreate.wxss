.video-create-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 32rpx;
}
.text-input {
  width: 100%;
  min-height: 120rpx;
  border: 1px solid #eee;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.ai-btn, .opt-btn, .upload-btn, .auto-tune-btn, .gen-video-btn {
  background: #6C63FF;
  color: #fff;
  border-radius: 12rpx;
  font-size: 30rpx;
  padding: 18rpx 0;
  margin-bottom: 8rpx;
}
.picker {
  background: #f5f5ff;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  margin-bottom: 8rpx;
  color: #6C63FF;
}
.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px dashed #bbb;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 8rpx;
}
.btn-container {
  display: flex;
  margin-top: 48rpx;
  flex-direction: column;
  gap: 40rpx
}
.step-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}
.step-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

/* 声音选择样式 */
.voice-list {
  margin-bottom: 30rpx;
}
.voice-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.voice-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}
.voice-item.selected {
  border-color: #6C63FF;
  background: #f8f7ff;
}
.voice-item.cloned-voice {
  border-color: #ff6b6b;
}
.voice-item.cloned-voice.selected {
  border-color: #ff6b6b;
  background: #fff5f5;
}
.voice-info {
  display: flex;
  align-items: center;
  flex: 1;
}
.voice-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #f5f5f5;
}
.voice-details {
  flex: 1;
}
.voice-name-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}
.voice-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}
.cloned-badge {
  background: #ff6b6b;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}
.voice-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}
.voice-actions {
  margin-left: 20rpx;
}
.play-btn, .upload-btn {
  background: #6C63FF;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}
.play-btn.playing {
  background: #ff6b6b;
}

/* BGM选择样式 */
.bgm-options {
  margin-bottom: 30rpx;
}
.bgm-option {
  display: block;
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}
.bgm-option.selected {
  border-color: #6C63FF;
  background: #f8f7ff;
}
.option-desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  margin-left: 40rpx;
}

/* 视频素材样式 */
.video-item {
  padding: 18rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.video-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.video-item {
  width: calc((100% - 40rpx) / 3);
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  margin-bottom: 10rpx;
}
.video-player {
  width: 100%;
  height: 200rpx;
}
.video-info {
  padding: 10rpx;
}
.video-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 5rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.upload-time {
  font-size: 20rpx;
  color: #999;
}
.material-checkbox {
  transform: scale(0.8);
  background: #fff;
  border-radius: 50%;
}
.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 100rpx;
  width: 100%;
}