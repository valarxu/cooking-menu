.video-create-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 32rpx;
}
.text-input {
  width: 100%;
  min-height: 120rpx;
  border: 1px solid #eee;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.ai-btn, .opt-btn, .upload-btn, .auto-tune-btn, .gen-video-btn {
  background: #6C63FF;
  color: #fff;
  border-radius: 12rpx;
  font-size: 30rpx;
  padding: 18rpx 0;
  margin-bottom: 8rpx;
}
.picker {
  background: #f5f5ff;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  margin-bottom: 8rpx;
  color: #6C63FF;
}
.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px dashed #bbb;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 8rpx;
}
.btn-container {
  display: flex;
  margin-top: 48rpx;
  flex-direction: column;
  gap: 40rpx
}
.step-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}
.step-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

/* 声音选择样式 */
.voice-list {
  margin-bottom: 30rpx;
}
.voice-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.voice-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}
.voice-item.selected {
  border-color: #6C63FF;
  background: #f8f7ff;
}
.voice-item.cloned-voice {
  border-color: #ff6b6b;
}
.voice-item.cloned-voice.selected {
  border-color: #ff6b6b;
  background: #fff5f5;
}
.voice-info {
  display: flex;
  align-items: center;
  flex: 1;
}
.voice-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #f5f5f5;
}
.voice-details {
  flex: 1;
}
.voice-name-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}
.voice-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}
.cloned-badge {
  background: #ff6b6b;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}
.voice-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}
.voice-actions {
  margin-left: 20rpx;
}
.play-btn, .upload-btn {
  background: #6C63FF;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}
.play-btn.playing {
  background: #ff6b6b;
}

/* BGM选择样式 */
.bgm-options {
  margin-bottom: 30rpx;
}
.bgm-option {
  display: block;
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}
.bgm-option.selected {
  border-color: #6C63FF;
  background: #f8f7ff;
}
.option-desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  margin-left: 40rpx;
}

/* 视频素材样式 */
.video-item {
  padding: 18rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.video-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.video-item {
  width: calc((100% - 40rpx) / 3);
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  margin-bottom: 10rpx;
}
.video-player {
  width: 100%;
  height: 200rpx;
}
.video-info {
  padding: 10rpx;
}
.video-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 5rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.upload-time {
  font-size: 20rpx;
  color: #999;
}
.material-checkbox {
  transform: scale(0.8);
  background: #fff;
  border-radius: 50%;
}
.empty-tip {
  text-align: center;
  color: #999;
  padding: 60rpx 0;
  font-size: 28rpx;
}

/* 任务状态显示区域样式 */
.task-status-section {
  margin-top: 40rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.refresh-btn {
  background: #6C63FF;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-item {
  background: white;
  border-radius: 8rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #eee;
}

.task-time {
  font-size: 24rpx;
  color: #666;
}

.task-status-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.task-status {
  font-size: 24rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-weight: bold;
}

.task-status.completed {
  background: #e8f5e8;
  color: #4caf50;
}

.task-status.processing {
  background: #fff3cd;
  color: #856404;
}

.task-progress {
  font-size: 20rpx;
  color: #666;
  background: #f0f0f0;
  padding: 2rpx 6rpx;
  border-radius: 8rpx;
}

.progress-bar {
  width: 100%;
  height: 6rpx;
  background: #f0f0f0;
  border-radius: 3rpx;
  margin: 8rpx 0;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #6C63FF, #9C88FF);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.audio-results {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.audio-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx;
  background: #f8f9fa;
  border-radius: 6rpx;
}

.audio-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.audio-type {
  font-size: 22rpx;
  color: #6C63FF;
  font-weight: bold;
}

.audio-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.4;
}

.audio-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-text {
  font-size: 20rpx;
  font-weight: bold;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-text.completed {
  background: #4caf50;
  color: white;
}

.status-text.failed {
  background: #f44336;
  color: white;
}

.status-text.pending {
  background: #ff9800;
  color: white;
}

.status-text.processing {
  background: #2196f3;
  color: white;
  animation: pulse 1.5s ease-in-out infinite alternate;
}

@keyframes pulse {
  from {
    opacity: 1;
  }
  to {
    opacity: 0.6;
  }
}

.play-audio-btn {
  background: #6C63FF;
  color: white;
  border: none;
  border-radius: 4rpx;
  padding: 4rpx 8rpx;
  font-size: 20rpx;
}