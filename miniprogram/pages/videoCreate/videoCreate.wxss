/* 视频选择弹窗样式 */
.video-selector-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.video-selector-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 90%;
  max-width: 700rpx;
  max-height: 100%;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.video-selector-modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, #6C63FF, #9C88FF);
  color: white;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.modal-close {
  font-size: 40rpx;
  font-weight: bold;
  cursor: pointer;
  padding: 8rpx;
  border-radius: 50%;
  transition: background 0.3s ease;
}

.modal-close:hover {
  background: rgba(255, 255, 255, 0.2);
}

.modal-body {
  padding: 32rpx;
  max-height: 800rpx;
  overflow-y: auto;
}

.no-material {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.no-material-text {
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
}

.video-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.grid-video-item {
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  overflow: hidden;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.grid-video-item:hover {
  border-color: #6C63FF;
  box-shadow: 0 6rpx 20rpx rgba(108, 99, 255, 0.15);
  transform: translateY(-2rpx);
}

.grid-video-item.selected {
  border-color: #6C63FF;
  box-shadow: 0 8rpx 24rpx rgba(108, 99, 255, 0.25);
  transform: translateY(-4rpx);
}

.video-thumbnail {
  position: relative;
  height: 180rpx;
  overflow: hidden;
  background: #f8f9fa;
}

.thumbnail-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.select-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(108, 99, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  font-size: 48rpx;
  color: white;
  font-weight: bold;
}

.grid-video-info {
  padding: 16rpx;
  background: white;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.grid-video-name {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.grid-video-type {
  font-size: 22rpx;
  color: #6C63FF;
  background: #f0f0ff;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  display: inline-block;
  font-weight: 500;
  max-width: fit-content;
}

.grid-video-product {
  font-size: 20rpx;
  color: #ff6b6b;
  background: #fff5f5;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  display: inline-block;
  font-weight: 500;
  max-width: fit-content;
  border: 1rpx solid #ffe0e0;
}

.grid-video-meta {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background: #f8f9fa;
  border-top: 1rpx solid #eee;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  padding: 16rpx 0;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.cancel-btn:hover {
  background: #e0e0e0;
}

.confirm-btn {
  background: linear-gradient(135deg, #6C63FF, #9C88FF);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(108, 99, 255, 0.3);
}

.confirm-btn:disabled {
  background: #ccc;
