.video-create-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 32rpx;
}
.text-input {
  width: 100%;
  min-height: 120rpx;
  border: 1px solid #eee;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.ai-btn, .opt-btn, .upload-btn, .auto-tune-btn, .gen-video-btn {
  background: #6C63FF;
  color: #fff;
  border-radius: 12rpx;
  font-size: 30rpx;
  padding: 18rpx 0;
  margin-bottom: 8rpx;
}
.picker {
  background: #f5f5ff;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  margin-bottom: 8rpx;
  color: #6C63FF;
}
.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px dashed #bbb;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 8rpx;
}
.btn-container {
  margin-top: 48rpx;
}
.step-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}
.video-item {
  padding: 18rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.video-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.video-item {
  width: calc((100% - 40rpx) / 3);
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  margin-bottom: 10rpx;
}
.video-player {
  width: 100%;
  height: 200rpx;
}
.video-info {
  padding: 10rpx;
}
.video-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 5rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.upload-time {
  font-size: 20rpx;
  color: #999;
}
.material-checkbox {
  transform: scale(0.8);
  background: #fff;
  border-radius: 50%;
}
.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 100rpx;
  width: 100%;
} 