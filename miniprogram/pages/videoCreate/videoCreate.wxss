.video-create-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 32rpx;
}
.text-input {
  width: 100%;
  min-height: 120rpx;
  border: 1px solid #eee;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.ai-btn, .opt-btn, .upload-btn, .auto-tune-btn, .gen-video-btn {
  background: #6C63FF;
  color: #fff;
  border-radius: 12rpx;
  font-size: 30rpx;
  padding: 18rpx 0;
  margin-bottom: 8rpx;
}
.picker {
  background: #f5f5ff;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  margin-bottom: 8rpx;
  color: #6C63FF;
}
.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px dashed #bbb;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 8rpx;
} 