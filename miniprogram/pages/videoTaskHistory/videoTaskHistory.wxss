.container {
  padding: 32rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 48rpx;
  text-align: center;
}

.content {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.content.empty {
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

/* 任务状态显示区域样式 */
.task-status-section {
  margin-top: 40rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  width: 100%;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.refresh-btn {
  background: #6C63FF;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-item {
  background: white;
  border-radius: 8rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #eee;
}

.task-time {
  font-size: 24rpx;
  color: #666;
}

.task-status-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.task-status {
  font-size: 24rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-weight: bold;
}

.task-status.completed {
  background: #e8f5e8;
  color: #4caf50;
}

.task-status.processing {
  background: #fff3cd;
  color: #856404;
}

.task-progress {
  font-size: 20rpx;
  color: #666;
  background: #f0f0f0;
  padding: 2rpx 6rpx;
  border-radius: 8rpx;
}

.progress-bar {
  width: 100%;
  height: 6rpx;
  background: #f0f0f0;
  border-radius: 3rpx;
  margin: 8rpx 0;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #6C63FF, #9C88FF);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.audio-results {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.audio-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx;
  background: #f8f9fa;
  border-radius: 6rpx;
}

.audio-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.audio-type {
  font-size: 22rpx;
  color: #6C63FF;
  font-weight: bold;
}

.audio-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.4;
}

.audio-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-text {
  font-size: 20rpx;
  font-weight: bold;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-text.completed {
  background: #4caf50;
  color: white;
}

.status-text.failed {
  background: #f44336;
  color: white;
}

.status-text.pending {
  background: #ff9800;
  color: white;
}

.status-text.processing {
  background: #2196f3;
  color: white;
  animation: pulse 1.5s ease-in-out infinite alternate;
}

@keyframes pulse {
  from {
    opacity: 1;
  }
  to {
    opacity: 0.6;
  }
}

.play-audio-btn {
  background: #6C63FF;
  color: white;
  border: none;
  border-radius: 6rpx;
  padding: 4rpx 8rpx;
  font-size: 20rpx;
}