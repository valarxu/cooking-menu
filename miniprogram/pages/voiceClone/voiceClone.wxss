/* 容器样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.page-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 声音列表 */
.voice-list {
  margin-bottom: 40rpx;
}

.section-title {
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.voice-items {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.voice-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  transition: all 0.3s ease;
}

.voice-item:last-child {
  border-bottom: none;
}

.voice-item.selected {
  background-color: #f0f8ff;
  border-left: 6rpx solid #6145FF;
}

.voice-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.voice-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.voice-details {
  flex: 1;
}

.voice-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.voice-desc {
  font-size: 26rpx;
  color: #666;
}

.voice-actions {
  margin-right: 20rpx;
}

.play-btn {
  background-color: #6145FF;
  color: white;
  border: none;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.play-btn.playing {
  background-color: #ff6b6b;
}

.selected-icon {
  color: #6145FF;
  font-size: 32rpx;
  font-weight: bold;
}

/* 克隆按钮 */
.clone-section {
  padding: 40rpx 0;
  text-align: center;
}

.clone-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 30rpx rgba(255, 107, 107, 0.3);
}

.clone-btn-text {
  color: white;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.modal-overlay.show .modal-content {
  transform: scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
}

.record-text {
  margin-bottom: 40rpx;
}

.text-title {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}

.text-content {
  background-color: #f8f9fa;
  padding: 30rpx;
  border-radius: 15rpx;
  border-left: 6rpx solid #6145FF;
}

.text-content text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}

.record-controls {
  text-align: center;
  margin-bottom: 30rpx;
}

.record-status {
  margin-bottom: 30rpx;
}

.status-text {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.record-time {
  font-size: 32rpx;
  color: #6145FF;
  font-weight: bold;
}

.record-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #6145FF 0%, #764ba2 100%);
  color: white;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 10rpx 30rpx rgba(97, 69, 255, 0.3);
  transition: all 0.3s ease;
}

.record-btn.recording {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  transform: scale(1.1);
  box-shadow: 0 15rpx 40rpx rgba(255, 107, 107, 0.4);
}

.record-btn-text {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.playback-section {
  text-align: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 15rpx;
}

.playback-title {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}

.playback-btn {
  background-color: #28a745;
  color: white;
  border: none;
  border-radius: 30rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
}

.modal-footer {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  gap: 20rpx;
}

.cancel-btn {
  flex: 1;
  background-color: #f8f9fa;
  color: #666;
  border: none;
  border-radius: 30rpx;
  padding: 25rpx;
  font-size: 30rpx;
}

.submit-btn {
  flex: 1;
  background-color: #6145FF;
  color: white;
  border: none;
  border-radius: 30rpx;
  padding: 25rpx;
  font-size: 30rpx;
}

.submit-btn.disabled {
  background-color: #ccc;
  color: #999;
}